generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model LanguageIcon {
  id        String    @id @default(uuid())
  icon      Bytes     @db.Blob
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  Language  Language?

  @@map("LanguageIcons")
}

model Language {
  id          String        @id @default(uuid())
  code        String        @db.VarChar(2)
  // icon      String // In case if we will use image hosting
  icon        LanguageIcon? @relation(fields: [iconId], references: [id])
  iconId      String?       @unique @db.VarChar(36)
  Translation Translation[]
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  @@map("Languages")
}

model Translation {
  id                 String                            @id @default(uuid())
  text               String
  language           Language                          @relation(fields: [languageId], references: [id])
  languageId         String                            @db.VarChar(36)
  createdAt          DateTime                          @default(now())
  updatedAt          DateTime                          @updatedAt
  translations       TranslationOnDefaultTranslation[] @relation(name: "Translation")
  defaultTranslation TranslationOnDefaultTranslation[] @relation(name: "DefaultTranslation")

  @@map("Translations")
}

model TranslationOnDefaultTranslation {
  id String @id @default(uuid())

  translation   Translation @relation("Translation", fields: [translationId], references: [id])
  translationId String      @db.VarChar(36)

  defaultTranslation   Translation @relation("DefaultTranslation", fields: [defaultTranslationId], references: [id])
  defaultTranslationId String      @db.VarChar(36)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("TranslationsOnDefaultTranslations")
}
